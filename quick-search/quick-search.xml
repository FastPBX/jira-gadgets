<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs
    title="Quick Search"
    author="FastPBX"
    thumbnail="https://www.fastpbx.com/"
    description="FastPBX Issue Quick Search">

    <Require feature="minimessage" />
    <Require feature="dynamic-height" />

  </ModulePrefs>
  
  <Content type="html"><![CDATA[
    <link rel="stylesheet"
      href="https://raw.githubusercontent.com/FastPBX/jira-gadgets/main/quick-search/quick-search.css">

    <div class="fsc">
      <div class="fscl">
        <div>Search By DID Number:</div>
        <div><input id="didquery" class="fsci" type="text"/></div>
        <div><button class="fsci" onClick="doNumbersSearch()">Find Issues</button></div>
      </div>
    </div>

    <script type="text/javascript"
      src="https://raw.githubusercontent.com/FastPBX/jira-gadgets/main/quick-search/quick-search.js"></script>
  ]]></Content>
</Module>
